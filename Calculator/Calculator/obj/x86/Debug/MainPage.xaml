<Page
    x:Class="Calculator.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Calculator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock x:ConnectionId='2'
            x:Name="textBox1"
            Text="0"
            Grid.ColumnSpan="4"
            TextAlignment="Right"
            FontSize="50"
            TextWrapping="Wrap"
            
            IsTextScaleFactorEnabled="True"/>

        <Button x:ConnectionId='3' 
            x:Name="b0"
            Content="0"
                                
            Tag="0"
            
            Grid.Row="5" 
            Grid.Column="1"
            
            Margin="5,5,5,5" 
            
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"/>
        
        <Button x:ConnectionId='4' 
            x:Name="b1"
            Content="1"
                                
            Tag="1"
            
            Grid.Row="4" 
            Grid.Column="0"
            
            Margin="5,5,5,5" 
            
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"/>
        
        <Button x:ConnectionId='5' 
            x:Name="b2"
            Content="2"
                                
            Tag="2"
            
            Grid.Row="4"
            Grid.Column="1"
            
            Margin="5,5,5,5" 
            
            HorizontalAlignment="Stretch"  
            VerticalAlignment="Stretch"/>
        
        <Button x:ConnectionId='6' 
            x:Name="b3"
            Content="3"
                                
            Tag="3"
            
            Grid.Row="4" 
            Grid.Column="2"
            
            Margin="5,5,5,5" 
            
            HorizontalAlignment="Stretch" 
            VerticalAlignment="Stretch"/>
        
        <Button x:ConnectionId='7' 
            x:Name="b4"
            Content="4"
                                
            Tag="4"
            
            Grid.Row="3" 
            Grid.Column="0"
            
            Margin="5,5,5,5" 
            
            HorizontalAlignment="Stretch" 
            VerticalAlignment="Stretch"/>
        
        <Button x:ConnectionId='8' 
            x:Name="b5"
            Content="5"
                                
            Tag="5"
            
            Grid.Row="3" 
            Grid.Column="1"
            
            Margin="5,5,5,5" 
            
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"/>
        
        <Button x:ConnectionId='9' 
            x:Name="b6"
            Content="6"
                                
            Tag="6"
            
            Grid.Row="3" 
            Grid.Column="2"
            
            Margin="5,5,5,5"
            
            HorizontalAlignment="Stretch" 
            VerticalAlignment="Stretch"/>
        
        <Button x:ConnectionId='10' 
            x:Name="b7"
            Content="7"
                                
            Tag="7"
            
            Grid.Row="2" 
            Grid.Column="0"
            
            Margin="5,5,5,5" 
            
            HorizontalAlignment="Stretch" 
            VerticalAlignment="Stretch"/>
        
        <Button x:ConnectionId='11' 
            x:Name="b8"
            Content="8"
                                
            Tag="8"
            
            Grid.Row="2" 
            Grid.Column="1"
            
            Margin="5,5,5,5" 
            
            HorizontalAlignment="Stretch" 
            VerticalAlignment="Stretch"/>
        
        <Button x:ConnectionId='12' 
            x:Name="b9"
            Content="9"
                                
            Tag="9"
            
            Grid.Row="2" 
            Grid.Column="2"
            
            Margin="5,5,5,5" 
            
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"/>
        
        <Button x:ConnectionId='13' 
            x:Name="bclear"
            Content="Clear"
                                  
            Tag="clear"
            
            Grid.Row="6"
            Grid.Column="0"
            
            Margin="5,5,5,5"
            
            HorizontalAlignment="Stretch" 
            VerticalAlignment="Stretch"/>
        
        <Button x:ConnectionId='14' 
            x:Name="bdecimal"
            Content="."
                                
            Tag="."
            
            Grid.Row="5"
            Grid.Column="2"
            
            Margin="5,5,5,5" 
            
            HorizontalAlignment="Stretch" 
            VerticalAlignment="Stretch"/>
        
        <Button x:ConnectionId='15' 
            x:Name="bopenP"
            Content="("
                                
            Tag="("
            
            Grid.Row="1" 
            Grid.Column="0"
            
            Margin="5,5,5,5"
            
            HorizontalAlignment="Stretch" 
            VerticalAlignment="Stretch"/>
        
        <Button x:ConnectionId='16' 
            x:Name="bcloseP"
            Content=")"
                                
            Tag=")"
            
            Grid.Row="1" 
            Grid.Column="1"
            
            Margin="5,5,5,5" 
            
            HorizontalAlignment="Stretch" 
            VerticalAlignment="Stretch"/>
        
        <Button x:ConnectionId='17' 
            x:Name="bbackspace"
            Content="DEL"
                                  
            Tag="back"
            
            Grid.Row="1" 
            Grid.Column="2" 
            
            Margin="5,5,5,5" 
            
            HorizontalAlignment="Stretch" 
            VerticalAlignment="Stretch"/>
        
        <Button x:ConnectionId='18' 
            x:Name="bplus"
            Content="+"
                                
            Tag="+"
            
            Grid.Row="4" 
            Grid.Column="3"
            
            Margin="5,5,5,5" 
            
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"/>
        
        <Button x:ConnectionId='19' 
            x:Name="bminus"
            Content="-"
                                
            Tag="-"
            
            Grid.Row="3"
            Grid.Column="4"
            
            Margin="5,5,5,5" 
            
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"/>
        
        <Button x:ConnectionId='20' 
            x:Name="btimes"
            Content="X"
                                
            Tag="x"
            
            Grid.Row="2"
            Grid.Column="4"
            
            Margin="5,5,5,5"
        
            HorizontalAlignment="Stretch" 
            VerticalAlignment="Stretch"/>
        
        <Button x:ConnectionId='21' 
            x:Name="bdivided"
            Content="÷"
                                
            Tag="÷"
            
            Grid.Row="1" 
            Grid.Column="3"
            
            Margin="5,5,5,5" 
            
            HorizontalAlignment="Stretch" 
            VerticalAlignment="Stretch"/>
        
        <Button x:ConnectionId='22' 
            x:Name="bequals"
            Content="="
                                
            
            Grid.Row="5" 
            Grid.Column="4"
            
            Margin="5,5,5,5" 
            
            HorizontalAlignment="Stretch" 
            VerticalAlignment="Stretch"/>
    </Grid>
</Page>

