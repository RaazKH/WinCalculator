<Page
    x:Class="Calculator.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Calculator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock
            x:Name="textBox1"
            Text="0"
            Grid.ColumnSpan="5"
            TextAlignment="Right"
            FontSize="50"
            
            />

        <Button 
            x:Name="b0"
            Content="0"
            Click="SayHelloButton_Click"
            Grid.Row="4" 
            HorizontalAlignment="Stretch" 
            Margin="5,5,5,5" 
            VerticalAlignment="Stretch"/>
        <Button 
            x:Name="b1"
            Content="1"
            Click="SayHelloButton_Click"
            Grid.Column="1"
            Grid.Row="4" 
            HorizontalAlignment="Stretch" 
            Margin="5,5,5,5" 
            VerticalAlignment="Stretch"/>
        <Button 
            x:Name="b2"
            Content="2"
            Click="SayHelloButton_Click"
            Grid.Column="2"
            Grid.Row="4" 
            HorizontalAlignment="Stretch" 
            Margin="5,5,5,5" 
            VerticalAlignment="Stretch"/>
        <Button 
            x:Name="b3"
            Content="3"
            Click="SayHelloButton_Click"
            Grid.Column="3"
            Grid.Row="4" 
            HorizontalAlignment="Stretch" 
            Margin="5,5,5,5" 
            VerticalAlignment="Stretch"/>
        <Button 
            x:Name="b4"
            Content="4"
            Click="SayHelloButton_Click"
            Grid.Column="4"
            Grid.Row="4" 
            HorizontalAlignment="Stretch" 
            Margin="5,5,5,5" 
            VerticalAlignment="Stretch"/>
        <Button 
            x:Name="b5"
            Content="5"
            Click="SayHelloButton_Click"
            Grid.Row="3" 
            HorizontalAlignment="Stretch" 
            Margin="5,5,5,5" 
            VerticalAlignment="Stretch"/>
        <Button 
            x:Name="b6"
            Content="6"
            Click="SayHelloButton_Click"
            Grid.Column="1"
            Grid.Row="3" 
            HorizontalAlignment="Stretch" 
            Margin="5,5,5,5" 
            VerticalAlignment="Stretch"/>
        <Button 
            x:Name="b7"
            Content="7"
            Click="SayHelloButton_Click"
            Grid.Column="2"
            Grid.Row="3" 
            HorizontalAlignment="Stretch" 
            Margin="5,5,5,5" 
            VerticalAlignment="Stretch"/>
        <Button 
            x:Name="b8"
            Content="8"
            Click="SayHelloButton_Click"
            Grid.Column="3"
            Grid.Row="3" 
            HorizontalAlignment="Stretch" 
            Margin="5,5,5,5" 
            VerticalAlignment="Stretch"/>
        <Button 
            x:Name="b9"
            Content="9"
            Click="SayHelloButton_Click"
            Grid.Column="4"
            Grid.Row="3" 
            HorizontalAlignment="Stretch" 
            Margin="5,5,5,5" 
            VerticalAlignment="Stretch"/>
        <Button 
            x:Name="bplus"
            Content="+"
            Click="SayHelloButton_Click"
            Grid.Row="2" 
            HorizontalAlignment="Stretch" 
            Margin="5,5,5,5" 
            VerticalAlignment="Stretch"/>
        <Button 
            x:Name="bminus"
            Content="-"
            Click="SayHelloButton_Click"
            Grid.Column="1"
            Grid.Row="2"
            HorizontalAlignment="Stretch" 
            Margin="5,5,5,5" 
            VerticalAlignment="Stretch"/>
        <Button 
            x:Name="btimes"
            Content="X"
            Click="SayHelloButton_Click"
            Grid.Column="2"
            Grid.Row="2" 
            HorizontalAlignment="Stretch" 
            VerticalAlignment="Stretch"
            Margin="5,5,5,5"/>
        <Button 
            x:Name="bdivided"
            Content="/"
            Click="SayHelloButton_Click"
            Grid.Column="3"
            Grid.Row="2" 
            HorizontalAlignment="Stretch" 
            Margin="5,5,5,5" 
            VerticalAlignment="Stretch"/>
        <Button 
            x:Name="bequals"
            Content="="
            Click="SayHelloButton_Click"
            Grid.Column="4"
            Grid.Row="2" 
            HorizontalAlignment="Stretch" 
            Margin="5,5,5,5" 
            VerticalAlignment="Stretch"/>
    </Grid>
</Page>
